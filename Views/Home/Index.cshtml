@model TaskDone_V2.Models.ApplicationUser
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Task Done Mission</h1>
    <p class="lead">We’re committed to creating the best service for you that defy convention, and inspire our customers with pride and trust. In fact, we make every service the best experience for the user.</p>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="\Images\Slider\Slider-1.png" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="\Images\Slider\Slider-2.png" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="\Images\Slider\Slider-3.png" alt="Third slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="\Images\Slider\Slider-4.jpg" alt="Fourth slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="\Images\Slider\Slider-5.jpg" alt="Fifth slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div>
        <br />
        @if (User.Identity.IsAuthenticated)
        {
            <p><a href="@Url.Action("Index", "UserInfo")" class="badge badge-pill badge-success">Your Information &raquo;</a></p>

        }
        <p><a href="@Url.Action("About", "Home")" class="badge badge-pill badge-success">Learn more &raquo;</a></p>
    </div>
    </div>
    




