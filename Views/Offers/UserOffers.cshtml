@model IEnumerable<TaskDone_V2.Models.Offer>

@{
    ViewBag.Title = "Project Offers";
}

<h2>Project Offers</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Project.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OfferedPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OfferedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Project.AcceptedPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Project.Name)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.OfferedPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OfferedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Project.AcceptedPrice)
        </td>
        <td>
            @Html.ActionLink("Offer Details", "Details", new { id = item.Id }, new{ @class = "badge badge-pill badge-success" })
        </td>
    </tr>
}

</table>
