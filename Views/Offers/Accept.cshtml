@model TaskDone_V2.Models.Offer

@{
    ViewBag.Title = "Details";
}

<h2>Accepting the Offer: </h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.UserEmail)
    @Html.HiddenFor(model => model.ProjectId)
    @Html.HiddenFor(model => model.OfferedDate)
    @Html.HiddenFor(model => model.OfferedPrice)
    @Html.HiddenFor(model => model.Project)
    @Html.HiddenFor(model => model.Accepted)
    @Html.HiddenFor(model => model.Project.StatusId)


    <div class="form-group">
        @Html.LabelFor(model => model.Project.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.TextBoxFor(model => model.Project.Name, null, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })

            @Html.ValidationMessageFor(model => model.Project.Name, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.OfferedPrice, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.TextBoxFor(model => model.OfferedPrice, null, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })


            @Html.ValidationMessageFor(model => model.OfferedPrice, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Project.ProposedPrice, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.TextBoxFor(model => model.Project.ProposedPrice, null, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })

            @Html.ValidationMessageFor(model => model.Project.ProposedPrice, "", new { @class = "text-danger" })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Project.StatusId, "StatusId", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("StatusId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Project.StatusId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Accepted, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.RadioButtonFor(model => model.Accepted, true)

            @Html.ValidationMessageFor(model => model.Accepted, "", new { @class = "text-danger" })

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Accept the Offer" class="btn btn-success" />
        </div>
    </div>
</div>
}
<p>
    @Html.ActionLink("Back to List", "UserOffers", new {@class = "badge badge-pill badge-success"  })
</p>
