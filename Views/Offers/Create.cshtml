@model TaskDone_V2.Models.Offer

@{
    ViewBag.Title = "Create";
}


<h2>Create your offer @Html.TextBox("ProposedPrice")</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Offer</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        @Html.LabelFor(model => model.Project.Id, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.HiddenFor(model => model.ProjectId)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.UserEmail, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.TextBoxFor(model => model.UserEmail, null, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Project.ProposedPrice, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.TextBox("ProposedPrice", null, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.OfferedPrice, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.OfferedPrice, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.OfferedPrice, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.OfferedDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.OfferedDate, "{0:yyyy-MM-dd}", htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.OfferedDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-dark" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new {@class = "badge badge-pill badge-success"  })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
