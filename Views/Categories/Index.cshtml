@model IEnumerable<TaskDone_V2.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new {@class = "badge badge-pill badge-success"  })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new {@class = "badge badge-pill badge-success"  }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new {@class = "badge badge-pill badge-success"  }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new {@class = "badge badge-pill badge-success"  })
        </td>
    </tr>
}

</table>
