
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Task Done!</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light" >
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
            <div class="navbar-header pull-left">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="~/Images/Logo.png" alt="Site Logo" style="height:50px; width: 50px" />
                </a>
            </div>
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">Task Done!</a>
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Projects")">Projects</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("List", "Categories")">Categories</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("About", "Home")">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Contact", "Home")">Contact</a>
                </li>
                @if (User.Identity.IsAuthenticated)
                {

                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle nav-link" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Helpee 
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item " href="@Url.Action("Index", "UserInfo")">My Profile</a>
                        <a class="dropdown-item " href="@Url.Action("Create", "Projects")">Create New Project</a>
                        <a class="dropdown-item " href="@Url.Action("UserProjects", "Projects")">My Posted Projects</a>
                        <a class="dropdown-item " href="@Url.Action("OfferOnUserProjects", "Offers")">Offers On My Projects</a>
                        <a class="dropdown-item " href="@Url.Action("UserProjectsInQueue", "Projects")">Projects In Queue </a>
                        <a class="dropdown-item " href="@Url.Action("UserProjectsCompleted", "Projects")">Projects Completed </a>
                    </div>
                </div>
                
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle nav-link" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Helper 
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item " href="@Url.Action("MyAssignedProjectsInQueue", "Projects")">My Assigned Projects </a>
                        <a class="dropdown-item " href="@Url.Action("MyCompletedProjects", "Projects")">Projects I Completed </a>
                        <a class="dropdown-item " href="@Url.Action("UserOffers", "Offers")">My Offers</a>
                    </div>
                </div>
                }
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Categories")">Add Category</a>
                    </li>
                }
            </ul>
            @Html.Partial("_LoginPartial")

        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Task Done!</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
